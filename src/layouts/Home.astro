---
import Base from '@layouts/Base.astro'
import Blocks from '@components/post/Li.astro'
import Prose from '@components/Prose.astro'
const {entry, entry: { title, description, blocks } } = Astro.props
---
<Base {entry}>
  {description && (
  <div class="shadow-4 w-90 w-50-m w-33-l tc relative z-20" style="margin:auto; background: white;margin-top:-4rem;padding:2rem;margin-bottom:4rem;box-shadow:1 0 1 #111">  
    <p class="fw3 f4  mw6 lh-copy mt2 mb2 bold tc" style="margin:auto;">
      <Prose text={description} />
    </p>    
  </div>
  )}
  {blocks && (
  <div class="max-w-5xl py-4 px-6 lg:px-16 2xl:px-0 mx-auto lg:pt-12 lg:pb-32 tk">
    <Blocks {blocks} />
  </div>
  )}

</Base>