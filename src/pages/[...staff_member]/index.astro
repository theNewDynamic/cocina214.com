---
import { getStaffMembers } from "@data/sanity/api"
import { url_mapping } from "@data/site"
import Layout from '@layouts/person/List.astro'

export async function getStaticPaths() {
  return [{
    params: {
      staff_member: url_mapping.staff || 'staff',
    },
    props: {
      entry: {
        title: "Staff",
        section: "Staff",
        entries: await getStaffMembers()
      }
    }
  }]
}

const { entry } = Astro.props
---
<Layout {entry} />